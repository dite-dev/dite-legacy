{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2020",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true,
    "target": "es2020",
    "jsx": "react"
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/fixtures",
    "**/dist",
    "**/*.test.ts"
  ]
}
